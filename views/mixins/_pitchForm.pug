mixin pitchForm(pitch = {})
  h2 Add a pitch
  form(action=`/add/${pitch._id || ''}` method='POST' class='card')
    label(for="title") Title
    input(type="text" id="title" name="title" value=pitch.title required)
    label(for="description") Description
    textarea(id="description" name="description")= pitch.description
    label(for="client") Client
    select(id="client" name="client")
      if clients.length > 0
          each client in clients
            option(value=`${client._id}`)= client.name
    input(type="submit" class="button" value="Save ğŸ’¾")